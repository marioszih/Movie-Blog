{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12">
            <h1 class="text-6xl pt-12 pb-8">
                Movies Review ({{ movies|length }})
            </h1>
        </div>
    </div>
    {% if app.user %}
        <div class="mx-auto w-4/5 my-8">
            <a 
                href="/movies/create" 
                class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-blue-500 text-white hover:bg-gray-800 hover:text-white">
                Create New movie
            </a>
        </div>
    {% endif %}
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for movie in movies %}
            <div class="text-center pt-8 pb-4">
                <img
                    src="{{ movie.imagePath }}"
                    alt="??"
                    class="shadow-xl rounded-md"
                />

                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ movie.title }}
                </h2>

                <span class="text-gray-500">
                    By <span class="italic text-sm text-gray-800">MZ | 06.07.2022
                </span>

                <p class="text-gray-500">
                    Released:<span class="italic text-sm text-gray-800"> {{ movie.releaseYear }}
                </p>

                <p class="text-base text-red-700 pt-4 pb-10 leading-8 font-light">
                    {{ movie.description }}
                </p>

                <a href="/movies/{{ movie.id }}" class="uppercase border border-gray-500 text-white text-lg py-4 px-12 rounded transition transition-all bg-blue-500 hover:bg-gray-800 hover:text-white">
                    Keep Reading
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}